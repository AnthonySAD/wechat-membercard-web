/**index.wxss**/
.top-wrapper{
  margin: 15rpx 40rpx;
  position: relative;
}
.card-wrapper{
  margin: 20rpx 0;
  width: 760rpx;
  height: 950rpx;
}
.top-wrapper view{
  display: inline-block;
  width: 80rpx;
}
.top-wrapper input{
  display: inline-block;
  width: 500rpx;
  border-bottom: 1px solid #444;
}
.top-wrapper .add-button{
  display: inline-block;
  font-size: 70rpx;
  width: 70rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  background-color: #eee;
  color: #444;
  position: absolute;
  right: 0;
  bottom: 0;
}

.search-message{
  text-align: center;
}

.card{
  color: white;
  height: 140rpx;
  margin: 24rpx 40rpx;
  border-radius: 15rpx;
  box-shadow: 4rpx 4rpx 4rpx 4rpx #666;
  position: relative;
}

.card-button-top{
  position: absolute;
  font-size: 42rpx;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  width: 60rpx;
  top: 1rpx;
  right: 2rpx;
  background-color: rgba(0, 0, 0, 0.05);
  border-radius: 5rpx 15rpx 0rpx 0rpx;
}

.card-button-bottom{
  position: absolute;
  font-size: 38rpx;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  width: 60rpx;
  bottom: 1rpx;
  right: 2rpx;
  background-color: rgba(255, 255, 255, 0.05);
  border-radius: 0rpx 0rpx 15rpx 5rpx;
}

.card-left{
  font-size: 70rpx;
  float: left;
  margin: 0 10rpx;
  line-height: 140rpx;
  width:90rpx;
  height: 90rpx;
}

.card-right{
  font-size: 35rpx;
  float: left;
  height: 130rpx;
}

.card-right-name{
  margin-top: 20rpx;
  margin-bottom: 8rpx;
}

.card-share-modal-wrapper{
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.45);
  width: 100%;
  height: 100%;
}

.card-share-modal{
  position: fixed;
  top: 300rpx;
  left: 100rpx;
  background: white;
  width: 550rpx;
  border-radius: 10rpx;
  border: 1px solid #555;
}

.card-share-modal-content{
  margin: 30rpx 30rpx 30rpx 30rpx;
}

.card-share-modal-title{
  margin-bottom: 30rpx;
  font-weight: 500;
  font-size: 50rpx;
  text-align: center;
}

.card-share-modal-button-wrapper{
  display: flex;
  height: 100rpx;
}

.card-share-modal-cancel{
  flex: 1;
  height: 100rpx;
}

.card-share-modal-confirm{
  flex: 1;
  height: 100rpx;
}




